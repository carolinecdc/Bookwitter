<%- include("partials/header.ejs") %>

<body>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="/assets/images/owl.png" alt="" width="200" height="auto">
        <h1 class="display-5 fw-bold text-body-emphasis">Bookwitter</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">Bookwitter is a dynamic and user-centric platform that allows book enthusiasts to share, discover, 
            and explore book reviews written by readers around the globe. 
            Our site is designed to foster a community of readers who are passionate about literature,
            providing a space where they can exchange opinions, recommend books, 
            and engage in meaningful discussions about their favorite titles.</p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a class="btn btn-outline-dark- btn-lg px-4 gap-3" href="/review-create">Review a Book! ðŸ“–</a>            
          </div>
        </div>
      </div>
    
      <div class="album py-5 bg-body-tertiary">
        <div class="container">      
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% if (locals.books) { %>
                    <% books.forEach(book => { %>
                <div class="col">
                  <div class="card shadow-sm">
                    <div style="width: 100%; height: 250px; overflow: hidden; display: flex; justify-content: center; align-items: center;">
                      <img class="bd-placeholder-img card-img-top"
                           src="<%= book.cover_url %>"
                           role="img"
                           aria-label="Placeholder: Thumbnail"
                           style="max-width: 100%; max-height: 100%; object-fit: contain; object-position: center;"
                           preserveAspectRatio="xMidYMid slice"
                           focusable="false">
                      </div>
                    <div class="card-body">
                      <a href="/review/<%= book.id %>" class="page-link d-block">                    
                      <h2 style="text-align: center;"><%= book.title %></h2> </a>  
                      <p class="card-text" style="text-align: center;"><%=book.review %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" color="#fcd303" class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                          <p><%= book.rate %>/5</p>
                        </div>
                        <a href="/profile/<%= book.username %>" class="btn"><small class="text-body-secondary">@<%= book.username %></small></a>
                      </div>
                    </div>
                  </div>
                </div>
                <% }); %>
            </div>
        
            <% } else { %>

              <div class="px-4 py-5 my-5 text-center">
                <img class="d-block mx-auto mb-4" src="/assets/images/owl.png" alt="" width="200" height="auto">
                <h1 class="display-5 fw-bold text-body-emphasis">Couldn't find the Book ðŸ˜¥</h1>
                <div class="col-lg-6 mx-auto">
                  <p class="lead mb-4"></p>
                  
                </div>
              </div>   
            <% } %>
          </div>
        </div>
      </div>
 
 
<%- include("partials/footer.ejs") %> 
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script> 
</body>
