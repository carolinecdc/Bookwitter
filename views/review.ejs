                                              <button type="submit" data-mdb-button-init="" data-mdb-ripple-init="" class="btn btn-outline-dark" data-mdb-button-initialized="true" aria-pressed="true" value="<%= comments[i].id %>" name="replyComment">Post comment</button>                                                                       
                                            </div>                                   
                                        </div>  
                                      </form>  
                                     </div>                              
                                    <% } %>
                              <% } %>
                              </div>
                            </div>                            
